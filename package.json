{
  "name": "joq.dev",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for joq.dev",
  "packageManager": "pnpm@10.12.4",
  "scripts": {
    "web:dev": "pnpm --filter web dev",
    "web:build": "pnpm --filter web build",
    "web:preview": "pnpm --filter web preview",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "clean:deps": "node scripts/clean-deps.js",
    "clean:all": "pnpm clean:deps && node scripts/clean-dist.js",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "author": "Juan Camilo Ospina Quintero",
  "license": "ISC",
  "dependencies": {
    "@joq/eslint-config": "workspace:*"
  },
  "devDependencies": {
    "eslint": "^9.3.0",
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
